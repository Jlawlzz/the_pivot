<div class="col s4">
  <div class="card z-depth-5">
    <div class="card-content center">
      <%= image_tag "http://qr.hellfroze.net/#{business.name}/qr.png?", style:"height:200px;width:200px;-webkit-filter: invert(100%); filter: invert(100%);"%>
        <div class="container" style="width: 100%;height: 60px;color:#00aaaa;">
          <%= link_to business.name, admin_business_path(business.url, business.id) %>
        </div>
      <h5> <%= business.description %> </h5>
      <div id="bid_partial">
        <%= link_to "Bid Now", {:controller => "auctions", :action => "index", :business_id => business.id }, style: "border-style:solid;border-color:#ff4444;width:225px;display:inline-block;border-width:thin;"%>
      </div>
    </div>
  </div>
</div>
