<div class="col s4">
  <div class="card z-depth-5 card-stack">
    <div class="card-image waves-effect waves-block waves-light">
      <div class='admin-image'>
        <%= image_tag "https://robohash.org/#{admin.id}", width: "300px", class: "item-show" %>
      </div>
    </div>
    <div class="card-content center">
      <span class="card-title activator grey-text text-darken-4">
        <div class="container" style="width: 100%;height: 60px;">
          <h6><%= admin.username %></h6>
        </div>
      </span>
      <button class="btn waves-effect waves-light red" type="submit" name="action">
        <% if admin != current_user %>
          <%= link_to "Vote to Fire", admin_user_path(admin.id, @business.id), action: "update", method: :patch  %>
        <% end %>
      </button>
    </div>
  </div>
</div>
