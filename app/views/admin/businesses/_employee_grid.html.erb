<div class="col s4">
  <div class="card z-depth-5">
    <div class="card-image waves-effect waves-block waves-light">
      <div class="human-image">
        <%= image_tag "#{auction.human.url}", width: "300px", height: "200px", class: "item-show" %>
      </div>
    </div>
    <div class="card-content center">
      <span class="card-title activator">
        <div class="container" style="width: 100%;height: 60px;">
          <h3 class="robot"><%= auction.human.scum_name %></h3>
        </div>
        <div class="row">
          <i class="material-icons rightn human-icons">subject</i></span>
        </span>
        <h5 style="padding-left:81px;">Details</h5>
      </div>
      <button class="btn waves-effect waves-light red" type="submit" name="action">
        <%= link_to "Decomission #{auction.human.scum_name}!", decomission_human_path(auction.human), method: :patch, style: "color: white"  %>
      </button>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Back to Human</span>
      <p class="custom-para"> <%= auction.human.bio %> </p>
    </div>
  </div>
</div>
