

<% @admins = []%>
<% 3.times do |t| %>
  <% @admins << "Admin#{t}" %>
<% end %>

<div class = "container">
  <div class="col s12"  style="padding-top:10vh;">
    <%= render partial: "business_grid", collection: current_user.businesses, as: :business %>
  </div>

<div class="card">
  <div class="grid-item-container">
    <h2 class="center">Current Admins</h2>
    <div class="row">
        <%= render partial: "admin_grid", collection: @admins, as: :admin %>
    </div>
  </div>
</div>

<div class="card">
  <div class="grid-item-container">
    <h2 class="center">Current Employees</h2>
    <div class="row">
      <% if @humans %>
        <%= render partial: "partials/grid_item", collection: @humans, as: :human %>
      <% else %>
        <h2> You have no Employees, visit Human Shop to bid </h2>
      <% end %>
    </div>
  </div>
</div>

