<% @admins = []%>
<% 3.times do |t| %>
  <% @admins << "Admin#{t}" %>
<% end %>

<% @people = []%>
<% 3.times do |t| %>
  <% @people << "Person #{t}" %>
<% end %>


<div class = "container">
  <div class="col s12"  style="padding-top:10vh;">
    <div class="card brown lighten-2">
      <div class="card-content center">
        <h2>Robot Business1</h2>
        <h4>We make humans do the jobs you don't want to.</h4>
      </div>
    </div>
  </div>

<div class="card brown lighten-2">
  <div class="grid-item-container">
    <h2 class="center">Current Admins</h2>
    <div class="row">
        <%= render partial: "partials/admin_grid", collection: @admins, as: :admin %>
    </div>
  </div>
</div>

<div class="card brown lighten-2">
  <div class="grid-item-container">
    <h2 class="center">Current Employees</h2>
    <div class="row">
        <%= render partial: "partials/grid_item", collection: @people, as: :person %>
    </div>
  </div>
</div>

