
<div class="container">

	<% if current_user %>
		<div class="card z-depth-5" style="border-style:solid;border-color:#ff4444;display:inline-block;border-width:thin;" align="center">
	    <%= link_to "<- Back to Dashboard", dashboard_path, style: "border-style:solid;border-color:#ff4444;width:225px;height:30px;padding-top:3px;display:inline-block;border-width:thin;" %>
	  </div>
	<% else %>
		<div class="card z-depth-5" style="border-style:solid;border-color:#ff4444;display:inline-block;border-width:thin;" align="center">
			<%= link_to "Home Page", root_path, style: "border-style:solid;border-color:#ff4444;width:225px;height:30px;padding-top:3px;display:inline-block;border-width:thin;" %>
		</div>
	<% end %>


<div class="card">
	<div class="card-content center">

		<br>
		<br>
		<div class="filter">
			<h4>Click a Business to Join:</h4>
		</div>
		<table class="bordered centered responsive-table">
			<thead>
				<tr>
					<th data-field="BusinessName">Business Name</th>
					<th data-field="Join">Join?</th>
				</th>
			</tr>
		</thead>
		<tbody>
			<%= render partial: "businesses", collection: @businesses, as: :business %>
		</tbody>
	</table>
</div>
</div>
</div>
