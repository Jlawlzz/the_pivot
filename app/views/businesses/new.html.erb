<div id='gif-body'>

<div class="container" style="width:34rem;">

  <% if current_user %>
    <div class="card z-depth-5" style="border-style:solid;border-color:#ff4444;display:inline-block;border-width:thin;" align="center">
      <%= link_to "<- Back to Dashboard", dashboard_path, style: "border-style:solid;border-color:#ff4444;width:225px;height:30px;padding-top:3px;display:inline-block;border-width:thin;" %>
    </div>
  <% else %>
    <div class="card z-depth-5" style="border-style:solid;border-color:#ff4444;display:inline-block;border-width:thin;" align="center">
      <%= link_to "Home Page", root_path, style: "border-style:solid;border-color:#ff4444;width:225px;height:30px;padding-top:3px;display:inline-block;border-width:thin;" %>
    </div>
  <% end %>

    <div class="card">
      <div class="card-content new-biz center">
        <%= form_for @business, url: businesses_path, style:"font-size:2rem" do |f| %>

        <%= f.label :name, "Business Name:" %>
        <%= f.text_field :name %>
        <%= f.label :description, "Description:" %>
        <%= f.text_field :description %>
        <br>
        <div id="new_user_submit">
          <a class="waves-effect waves-light btn-large yellow darken-3" id="huge-page-button" >
            <%= f.submit "Submit", id:"huge-page-button-text"%>
          </a>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
