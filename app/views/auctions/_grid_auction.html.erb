
<div class="col s4">
  <div class="card z-depth-5">
    <div class="card-image waves-effect waves-block waves-light">
      <div class="human-images">
        <%= image_tag auction.human.url, width: "300px", class: "item-show" %>
      </div>
    </div>
    <div class="card-content center">
      <span class="card-title activator">
        <div class="container" style="width: 100%;height: 60px;">
          <h3 class="robot"><%= auction.human.scum_name %></h3>
        </div>
        <div class="row">
          <i class="material-icons right human-icons">subject</i></span>
        </span>
        <h5 class="human-details">Details</h5>
      </div>
      <div id="bid">
      <h5>Current Bid: $<%= auction.high_bid %> </h5>
      <h5><div id="countdown"></div>
        <%= javascript_tag "auctionTimer()" %>
      <div id="countdown2"></div></h5>
      <div id="bid_button">
      <button class="btn waves-effect waves-light red" type="submit" name="action">
        <%= link_to "Bid Now!", auction_path(auction), style: "color: white"  %>
      </button>
    </div>
    </div>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Back to Human</span>
      <p class="custom-para"> <%= auction.human.bio %> </p>
    </div>
  </div>
</div>
