
<div class="container center">
  <a class="waves-effect waves-light btn-large yellow darken-3" id="huge-page-button">
    <%= link_to "Create a Business", new_business_path(@business), style:"border:0;font-style:normal;font-size:30px;text-transform:inherit;background:none;padding-top:2rem;"  %>
  </a>
  <a class="waves-effect waves-light btn-large light-blue darken-3" id="huge-page-button">
    <div class="center">
      <%= link_to "Join an Existing Business", businesses_path, style:"border:0;font-style:normal;font-size:30px;text-transform:inherit;background:none;padding-top:2rem;" %>
    </div>
  </a>
</div>

<div class = "container">
  <div class="col s12"  style="padding-top:10vh;">
    <div class="card white">
      <div class="card-content center">
        <h1> <%= @user.first_name %>'s Profile</h1>
        <h2> Username: <%= @user.username %> </h2>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s4">
      <div class="card white">
        <div class="card-content white-text center">
          <i class="large material-icons" style="color:black;">visibility</i>
        </div>
        <div class="card-action center-align  ">
          <a class="waves-effect waves-light btn-large">
            <%= button_to "View Orders", "#", method: :get %>
          </a>
        </div>
      </div>
    </div>

    <div class="col s4">
      <div class="card white">
        <div class="card-content white-text center">
          <i class="large material-icons" style="color:black;">shopping_cart</i>
        </div>
        <div class="card-action center">
          <a class="waves-effect waves-light btn-large">
            <%= button_to "View Cart", "#", method: :get %>
          </a>
        </div>
      </div>
    </div>

    <div class="col s4">
      <div class="card white">
        <div class="card-content white-text center">
          <i class="large material-icons" style="color:black;">done_all</i>
        </div>
        <div class="card-action center">
          <a class="waves-effect waves-light btn-large">
            <%= button_to "Write a Review", "#", method: :get %>
          </a>
        </div>
      </div>
    </div>
  </div>

<h3 class="center review-text">All Item Reviews for <%= @user.username %>:</h3>
<ul>
  <div class="container">
    <%= render partial: 'partials/review_card_dashboard', collection: @reviews, as: :review %>
  </div>
</div>
